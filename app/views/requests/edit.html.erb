<%= simple_form_for(@request, html: {class: "form-signin"}) do |f| %>
    <h1>Editing Request</h1>

    <%= f.error_notification %>


    <%= f.input :content, label: false, placeholder: "Я хочу...", input_html: {class: "form-control"} %>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>

    <%= link_to 'Back', requests_path, class: "btn btn-primary btn-block" %>
<% end %>

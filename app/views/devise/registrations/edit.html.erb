<h2 class="text-center whbgtxt">DavaiBuy</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin margintop" }) do |f| %>

    <h2 class="text-center whtxt">Настройки профиля</h2>

    <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :current_password, required: true, label: false, placeholder: "Старый пароль", input_html: {class: "form-control"} %>
    <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Новый пароль", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: "Повторите пароль", input_html: {class: "form-control"} %>


    <%= f.button :submit, "Сохранить", class: "btn btn-info btn-block" %>

    <!--<%= link_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, input_html: {class: "btn-lg btn-info"} %>-->

<% end %>



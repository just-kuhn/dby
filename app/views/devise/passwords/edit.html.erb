<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
    <h2 class="text-center">Change your password</h2>

    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden, label: false, placeholder: "Reset password", input_html: {class: "form-control"} %>
    <%= f.full_error :reset_password_token %>

    <%= f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "New password", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm my password", input_html: {class: "form-control"} %>

    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>

    <%= render "devise/shared/links" %>
<% end %>


